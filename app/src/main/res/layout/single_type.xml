<?xml version="1.0" encoding="utf-8"?>

  <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SingleStepType"
    android:background="#ffffff">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:src="@drawable/pics2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="bottom">


      <Button
          android:id="@+id/single_step"
          android:text="@string/single_step"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:onClick="onSingleStepClicked"
          android:background="@drawable/buttonbg"
          android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp"
          android:textColor="#ffffff"
          android:layout_marginBottom="20dp"
          />
      <Button
          android:id="@+id/Iterative"
          android:text="@string/iterative"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_centerInParent="true"
          android:layout_below="@id/single_step"
          android:onClick="onIterativeClicked"
          android:background="@drawable/buttonbg2"
          android:layout_margin="10dp"
          android:textColor="#ffffff"
          />

    </LinearLayout>


  </LinearLayout>


</RelativeLayout>

